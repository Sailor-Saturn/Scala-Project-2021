			<pattern value="PRS_.*"/>
    	</restriction>
    </simpleType> 
    <simpleType name="STHumanId">
    	<restriction base="ID">
    		<pattern value="HRS_.*"/>
    	</restriction>
    </simpleType>
    <simpleType name="STTaskId">
    	<restriction base="ID">
    		<pattern value="TSK_.*"/>
    	</restriction>
    </simpleType>    
    <simpleType name="STProductId">
    	<restriction base="ID">
    		<pattern value="PRD_.*"/>
    	</restriction>
    </simpleType>    
    <simpleType name="STOrderId">
    	<restriction base="ID">
    		<pattern value="ORD_.*"/>
    	</restriction>
    </simpleType>    
    
    
    <simpleType name="STTaskIdRef">
    	<restriction base="IDREF">
